        Deletar
    </a>
</div>
@*ModalDelete*@
<div class="modal fade" tabindex="-1" role="dialog" id="modalPaginas">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">DELETAR</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"><b>Deseja realmente deletar o usuário @Model.Nome?</b></div>
            <div class="modal-footer">
                <form asp-action="Delete" style="display:inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Sim" class="btn btn-danger" style="width: 80px; height: 30px; display: inline;" />
                </form>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<script>
    function ModalDelete(url) {
        $(".modal-body").load(url); // chama diretório/arquivo dentro do corpo do modal
        $("#modalPaginas").modal('show'); // Abre o modal visualmente
    }
</script>