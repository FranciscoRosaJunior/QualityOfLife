@model QualityOfLife.Models.Paciente

@{
    ViewData["Title"] = "Paciente/Detalhe";
}

<div class="Detalhes">
    <div class="row">
        <div class="col-lg-6">
            <h2>Detalhes</h2>
        </div>
        <div class="col-lg-6" style="text-align:right; margin-top:20px;">
            <a asp-action="Index" title="Voltar" class="btn btn-sm btn-info">
                Voltar
            </a>
        </div>
    </div>
</div>
<br />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StatusPacientes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StatusPacientes)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Criado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Criado)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CriadoData)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CriadoData)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Modificado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Modificado)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ModificadoData)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ModificadoData)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" target="_blank" class="btn btn-sm btn-primary" style="width:80px; height:30px;" class="btn btn-sm btn-danger">
        Editar
    </a>
    <a href="javascript:void(0);" onclick="ModalDelete('ModalDelete')" style="width:80px; height:30px;" class="btn btn-sm btn-danger">
        Deletar
    </a>
</div>
@*ModalDelete*@
<div class="modal fade" tabindex="-1" role="dialog" id="modalPaginas">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">DELETAR</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"><b>Deseja realmente deletar o usuário @Model.Nome?</b></div>
            <div class="modal-footer">
                <form asp-action="Delete" style="display:inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Sim" class="btn btn-danger" />
                </form>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<script>
    function ModalDelete(url) {
        $(".modal-body").load(url); // chama diretório/arquivo dentro do corpo do modal
        $("#modalPaginas").modal('show'); // Abre o modal visualmente
    }
</script>