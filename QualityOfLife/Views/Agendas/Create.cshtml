@model QualityOfLife.Models.Agenda

@{
    ViewData["Title"] = "Create";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<datalist id="pacientes">
    @foreach (var item in ViewBag.Paciente)
    {
        <option value="@item.Cpf"> @item.Nome</option>
    }
</datalist>
<datalist id="profissionais">
    @foreach (var item in ViewBag.Profissional)
    {
        <option value="@item.Nome"> @item.Cpf</option>
    }
</datalist>

<div class="col-md-12">
    <h2>Cadastrar</h2>
    <hr />
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Criado" class="form-control" value="@ViewBag.CurrentUser" />
            <input type="hidden" asp-for="CriadoData" class="form-control" value="@ViewBag.Data" />
            <input type="hidden" asp-for="Modificado" class="form-control" />
            <input type="hidden" asp-for="ModificadoData" class="form-control" value="0001-01-01 00:00:00" />
            <input type="hidden" asp-for="Presenca" class="form-control" value="true" /> @*@Html.DisplayNameFor(model => model.Presenca)*@
            <input type="hidden" asp-for="FaltaJustificada" class="form-control" value="true" /> @*@Html.DisplayNameFor(model => model.FaltaJustificada)*@
            <input type="hidden" asp-for="Falta" class="form-control" value="false" /> @*@Html.DisplayNameFor(model => model.Falta)*@
            <input type="hidden" asp-for="Reagendar" class="form-control" value="false" /> @*@Html.DisplayNameFor(model => model.Reagendar)*@

            <div class="form-group col-md-6">
                <label asp-for="Repetir" class="control-label"></label>
                <select name="Repetir" class="form-select" aria-label="Default select example">
                    <option value="0" selected>Nenhuma</option>
                    <option value="1">Diarimente</option>
                    <option value="2">Semanalmente</option>
                    <option value="3">Mensalmente</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Paciente" class="control-label"></label>
                <input asp-for="Paciente.Nome" class="form-control" list="pacientes" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Profissional" class="control-label"></label>
                <input asp-for="Profissional.Nome" class="form-control" list="profissionais" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="TipoAtendimento" class="control-label"></label>
                <input asp-for="TipoAtendimento" class="form-control" />
                <span asp-validation-for="TipoAtendimento" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="DataHora" class="control-label"></label>
                <input asp-for="DataHora" class="form-control" />
                <span asp-validation-for="DataHora" class="text-danger"></span>
            </div>
            @*<div class="form-group col-md-4">
                    <label asp-for="Anotações" class="control-label"></label>
                    <input asp-for="Anotações" class="form-control" />
                    <span asp-validation-for="Anotações" class="text-danger"></span>
                </div>*@
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.Anotações)
                @Html.TextAreaFor(m => m.Anotações)
                @Html.ValidationMessageFor(m => m.Anotações, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group col-md-12">
                @*<input type="submit" value="Salvar" class="btn btn-default" />*@
                <button type="submit" class="btn btn-success">Salvar</button> |
                <button asp-action="Index" class="btn btn-info">Voltar</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=v5z53k0b99mq6jdq7rmord5xg2u6jwborbuov669whaeecsp"></script>
<script>
    tinymce.init({
        selector: 'textarea',
        height: 300,
        menubar: false,
        statusbar: false,
        theme: 'modern'
    });
</script>